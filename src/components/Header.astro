---
import { ThemeToggle } from "./ThemeToggle";
import { MobileNav } from "./MobileNav";
import { ModeToggle } from "./ModeToggla";

const navItems = [
    { href: "/", label: "Home" },
    { href: "/#experience", label: "Experience" },
    { href: "/#skills", label: "Skills" },
    { href: "/#education", label: "Education" },
];
---

<header
    class="sticky top-0 z-50 w-full shadow-md bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
    <div
        class="mx-auto flex h-16 max-w-screen-xl items-center justify-between px-4 md:px-8"
    >
        <a href="/" class="flex items-center space-x-2 font-bold">
            Muhammad Rydwan
        </a>
        <nav class="hidden md:flex items-center gap-2 md:gap-4">
            {
                navItems.map((item) => (
                    <a
                        href={item.href}
                        class="px-3 py-2 text-sm font-medium text-muted-foreground transition-colors hover:text-foreground"
                    >
                        {item.label}
                    </a>
                ))
            }
            <ModeToggle client:load />
        </nav>
        <MobileNav client:load />
    </div>
</header>
